<?xml version="1.0" encoding="UTF-8"?>
<web-app id="encaixat">
	<display-name>Encaixa't!</display-name>

	<servlet>
		<servlet-name>SprintFooServlet</servlet-name>
		<servlet-class>org.catdroid.encaixat.j2ee.servlet.SprintFooServlet</servlet-class>
		<load-on-startup />
	</servlet>
	<servlet-mapping>
		<servlet-name>SprintFooServlet</servlet-name>
		<url-pattern>/foo</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ClientSayHello</servlet-name>
		<servlet-class>org.catdroid.encaixat.j2ee.servlet.client.SayHelloServlet</servlet-class>
		<load-on-startup />
	</servlet>
	<servlet-mapping>
		<servlet-name>ClientSayHello</servlet-name>
		<url-pattern>/client/sayHello</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<filter>
		<filter-name>performance</filter-name>
		<filter-class>com.actuanceconsulting.perflog.PerformanceLogFilter
		</filter-class>
		<init-param>
			<param-name>url-filter</param-name>
			<param-value>.*search.*</param-value>
		</init-param>
		<init-param>
			<param-name>log-category</param-name>
			<param-value>perflog</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>performance</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>