<?xml version="1.0" encoding="UTF-8"?>
<web-app id="encaixat">
	<display-name>Encaixa't!</display-name>

	<servlet>
		<servlet-name>GetMessage</servlet-name>
		<servlet-class>com.eaginsoftware.dejaloya.message.servlet.get.GetMessageServlet</servlet-class>
		<load-on-startup />
	</servlet>
	<servlet-mapping>
		<servlet-name>GetMessage</servlet-name>
		<url-pattern>/messages/get</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
	<filter>
		<filter-name>performance</filter-name>
		<filter-class>com.actuanceconsulting.perflog.PerformanceLogFilter
		</filter-class>
		<init-param>
			<param-name>url-filter</param-name>
			<param-value>.*search.*</param-value>
		</init-param>
		<init-param>
			<param-name>log-category</param-name>
			<param-value>perflog</param-value>
		</init-param>
	</filter>
	
	<filter-mapping>
		<filter-name>performance</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>