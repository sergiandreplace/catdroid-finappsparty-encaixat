<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="StandardButton" parent="android:Widget.TextView">
        <item name="android:background">@drawable/button_black</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GreenButton" parent="@style/StandardButton">
        <item name="android:background">@drawable/button_green</item>
        <item name="android:textColor">#333</item>
    </style>

    <style name="RedButton" parent="@style/StandardButton">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="StandardText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/Text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SectionHeader" parent="@style/StandardText">
        <item name="android:background">@drawable/panel_yellow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="SectionTitle" parent="@style/StandardText">
        <item name="android:background">@drawable/panel_blue</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="SectionContent" parent="@style/StandardText">
        <item name="android:background">@drawable/panel_white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">8dp</item>
    </style>

</resources>