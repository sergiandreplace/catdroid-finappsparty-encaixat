<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" android:gravity="center" android:background="#55000000">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:background="@drawable/panel_white"
        android:orientation="vertical" android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linearLayout1"
            style="@style/SectionHeader"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_margin="5dp"
            android:background="@drawable/panel_yellow"
            android:gravity="right">

            <LinearLayout
                android:id="@+id/LinearLayout02"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/panel_blue"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/face" />

                <LinearLayout
                    android:id="@+id/LinearLayout01"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_margin="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TransactionName"
                        style="@style/TransactionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView1"
                style="@style/SectionHeader"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:text="123,45â‚¬"
                android:textSize="54sp"
                android:typeface="monospace" android:layout_weight="1" android:gravity="right|center_vertical" android:textStyle="bold"/>
        </LinearLayout>

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="1">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1">

                <TextView
                    android:id="@+id/number_7"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_7" android:textSize="50sp"/>

                <TextView
                    android:id="@+id/number_8"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_8" android:textSize="50sp"/>

                <TextView
                    android:id="@+id/number_9"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_9" android:textSize="50sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1">

                <TextView
                    android:id="@+id/number_3"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_4" android:textSize="50sp"/>

                <TextView
                    android:id="@+id/number_4"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_5" android:textSize="50sp"/>

                <TextView
                    android:id="@+id/number_6"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_6" android:textSize="50sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1">

                <TextView
                    android:id="@+id/number_1"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_1" android:textSize="50sp"/>

                <TextView
                    android:id="@+id/number_2"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_2" android:textSize="50sp"/>

                <TextView
                    android:id="@+id/number_3"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_3" android:textSize="50sp"/>
            </TableRow>

            <TableRow
                android:id="@+id/TableRow01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:layout_weight="1">

                <TextView
                    android:id="@+id/TextView02"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_1"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/number_0"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_0" android:textSize="50sp"/>

                <TextView
                    android:id="@+id/number_c"
                    style="@style/StandardButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/number_c" android:textSize="50sp"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="120dp">

            <TextView
                android:id="@+id/TextView01"
                style="@style/RedButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/Cancel" android:layout_weight="1" android:textSize="50sp"/>

            <TextView
                android:id="@+id/textView2"
                style="@style/GreenButton"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/Ok"
                android:textSize="50sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>